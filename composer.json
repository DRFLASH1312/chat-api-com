{
    "name": "chat-api-com",
    "description": "chat-api.com php lib",
    "keywords": [
        "chat-api",
        "php",
        "sdk",
        "api"
    ],
    "type": "library",
    "homepage": "https://chat-api.com/en/docs.html",
    "license": "MIT",
    "authors": [
        {
            "name": "drdim",
            "homepage": "https://drdim.ru"
        }
    ],
    "require": {
        "php": ">=5.5",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "~2.6",
        "friendsofphp/php-cs-fixer": "~1.12"
    },
    "autoload": {
        "psr-4": { "ChatApiCom\\Client\\" : "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "ChatApiCom\\Client\\" : "test/" }
    }
}
